{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../js",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "dom.iterable"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 